<?php if ($pager->getPage() == 0): ?>
    <i class="fa fa-angle-double-left"></i>
    <i class="fa fa-angle-left"></i>
<?php else: ?>
    <a href="<?= $pager->getUrl(0) ?>"><i class="fa fa-angle-double-left"></i></a>
    <a href="<?= $pager->getUrl($pager->getPage() - 1) ?>"><i class="fa fa-angle-left"></i></a>
<?php endif ?>

<?php for ($i = 0; $i < $pager->getMaxPage(); $i++): ?>
    <?php if ($i == $pager->getPage()): ?>
        <?= $i + 1 ?>
    <?php else: ?>
        <a href="<?= $pager->getUrl($i) ?>"><?= $i + 1 ?></a>
    <?php endif ?>
<?php endfor ?>

<?php if ($pager->getPage() == $pager->getMaxPage() - 1): ?>
    <i class="fa fa-angle-right"></i>
    <i class="fa fa-angle-double-right"></i>
<?php else: ?>
    <a href="<?= $pager->getUrl($pager->getPage() + 1) ?>"><i class="fa fa-angle-right"></i></a>
    <a href="<?= $pager->getUrl($pager->getMaxPage() - 1) ?>"><i class="fa fa-angle-double-right"></i></a>
<?php endif ?>