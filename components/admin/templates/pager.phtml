<div class="pager">
    <?php if ($pager->hasPrev()): ?>
        <span class="first"><a href="<?= $pager->getFirstUrl() ?>"><i class="fa fa-angle-double-left"></i></a></span>
        <span class="prev"><a href="<?= $pager->getPrevUrl() ?>"><i class="fa fa-angle-left"></i></a></span>
    <?php else: ?>
        <span class="first"><i class="fa fa-angle-double-left"></i></span>
        <span class="prev"><i class="fa fa-angle-left"></i></span>
    <?php endif ?>
    <?php for ($i = 0; $i < $pager->getMaxPage(); $i++): ?>
        <?php if ($i == $pager->getPage()): ?>
            <span class="num"><?= $i + 1 ?></span>
        <?php else: ?>
            <span class="num"><a href="<?= $pager->getUrl($i) ?>"><?= $i + 1 ?></a></span>
        <?php endif ?>
    <?php endfor ?>
    <?php if ($pager->hasNext()): ?>
        <span class="next"><a href="<?= $pager->getNextUrl() ?>"><i class="fa fa-angle-right"></i></a></span>
        <span class="last"><a href="<?= $pager->getLastUrl() ?>"><i class="fa fa-angle-double-right"></i></a></span>
    <?php else: ?>
        <span class="next"><i class="fa fa-angle-right"></i></span>
        <span class="last"><i class="fa fa-angle-double-right"></i></span>
    <?php endif ?>
</div>
