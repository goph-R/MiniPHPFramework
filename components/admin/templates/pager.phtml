    <a href="<?= $router->getUrl('admin', ['page' => $pageNumber + 1]) ?>"><i class="fa fa-angle-right"></i></a>
    <a href="<?= $router->getUrl('admin', ['page' => $maxPageNumber - 1]) ?>"><i class="fa fa-angle-double-right"></i></a>
